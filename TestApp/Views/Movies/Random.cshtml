@model testapp4.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var className = Model.Costumers.Count > 0 ? "popular" : null;
}
<h2 class="@className">@Model.Movie.Name</h2>
@if (Model.Costumers.Count == 0)
{
    <text>No one has rented this movie before</text>
}
else
{
    <ul>
        @foreach (var costumer in Model.Costumers)
        {
        <ul class="list-group">
            <li class="list-group-item">@costumer.Name</li>
        </ul>
        }
    </ul>

}

